<div class=" flex h-screen bg-green-200">
    <!-- 左側の縦長のカード -->
    <div class="w-1/3 bg-white h-ful shadow-md rounded-lg overflow-auto mr-2 mb-12 mt-2 ml-2">
      <p>水やり催促メッセージ表示</p>
      <div class="bg-green shadow-md rounded-lg overflow-auto">
      <% @w_cycle.each do |w_cycle| %>
        <p><%= w_cycle %></p>
      <% end %>
      </div>
    </div>
  
    <!-- 右側のコンテナ -->
    <div class="w-2/3 flex flex-col mt-2 mb-12 relative">
      <!-- 上半分の横長のカード -->
      <div class="h-1/2 flex bg-white shadow-md rounded-lg overflow-hidden mr-2">
        <div class="w-1/3 flex flex-col items-center justify-center">
          <% if @user.avatar.attached? %> 
            <%= image_tag(@user.avatar, class: 'w-32 h-32 rounded-full mb-2') %>
          <% else %>
            <%= image_tag('default_image.png', class: 'w-32 h-32 rounded-full mb-2') %>
          <% end %>  
          ユーザー名
          <p>：<%= @user.name %></p>
          メールアドレス
          <p>：<%= @user.email %></p>
          アカウント登録日
          <p>：<%= @user.formatted_created_at %></p>
          <p>：<%= link_to 'LINEと連携し通知を受け取る', '#', class:'text-gray-400 hover:text-gray-900 hover:underline bg-green-200 border- border-gray-300 border-dashed' %></p>
        </div>
        <div class="w-2/3 flex">
          <div class="bg-white shadow-md rounded-lg overflow-hidden w-80 h-full mr-2 flex-none">
            <div class="p-4">
              <h2 class="text-2xl mt-6 font-semibold mb-2">最近登録した植物1番目</h2>
              <p class="text-gray-600">内容</p>
            </div>
          </div>
          <div class="bg-white shadow-md rounded-lg overflow-hidden w-80 h-full mr-2 flex-none">
            <div class="p-4">
              <h2 class="text-2xl mt-6 font-semibold mb-2">最近登録した植物2番目</h2>
              <p class="text-gray-600">内容</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- 下半分の横長のカード -->
      <div class="h-1/2 bg-white shadow-md rounded-lg overflow-hidden mt-2 mr-2">
        <p>楽天市場api使用しておすすめ商品を表示</p>
      </div>
    </div>
</div>
